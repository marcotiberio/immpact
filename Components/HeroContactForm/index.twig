<flynt-component 
  load:on="visible" 
  name="HeroContactForm" 
  class=""
  style="background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}var(--yellow){% endif %};">
  <div class="wrapper w-full mx-auto p-sm md:p-lg boxed max-w-screen-xl">
    <div class="flex flex-col justify-between">
      </div>
      <div class="relative w-full h-full pb-lg flex flex-col justify-between font-sans">
        {% if title %}
          <div class="max-w-screen-md flex items-center uppercase font-bodyMenu">{{ title }}</div>
        {% endif %}
        {% if subtitleHtml %}
          <div class="my-sm sm:mb-md">{{ subtitleHtml|e('wp_kses_post') }}</div>
        {% endif %}
        {% if contactForm %}
          <div class="mx-auto lg:w-[1000px]">{{ contactForm }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</flynt-component>

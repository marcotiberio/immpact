<ul class="menu w-full flex items-center justify-end gap-sm">
  {% for item in items %}
    <li class="{{ item.classes | join(' ') }} text-darkblue flex justify-start sm:justify-end text-left sm:text-right uppercase {{- item.current ? ' current-menu-item underline underline-offset-[5px]' }}">
      <a class="link font-bodyMenu flex items-center hover:underline hover:underline-offset-[5px] transition-transform duration-200 ease-in-out" href="{{ item.link }}" {{ item.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}>
        {{ item.title }}
      </a>
    </li>
  {% endfor %}
</ul>
